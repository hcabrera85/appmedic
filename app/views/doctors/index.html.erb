<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Marital</th>
      <th>Idcard</th>
      <th>Nacionality</th>
      <th>Occupation</th>
      <th>Telephone</th>
      <th>Address</th>
      <th>Email</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.date_of_birth %></td>
        <td><%= doctor.marital %></td>
        <td><%= doctor.idcard %></td>
        <td><%= doctor.nacionality %></td>
        <td><%= doctor.occupation %></td>
        <td><%= doctor.telephone %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.status %></td>
        <td><%= doctor.user %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

