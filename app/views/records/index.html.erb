<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Date time</th>
      <th>Symptom</th>
      <th>Diagnostic</th>
      <th>Notes</th>
      <th>Created by</th>
      <th>Status</th>
      <th>Doctor</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.date_time %></td>
        <td><%= record.symptom %></td>
        <td><%= record.diagnostic %></td>
        <td><%= record.notes %></td>
        <td><%= record.created_by %></td>
        <td><%= record.status %></td>
        <td><%= record.doctor %></td>
        <td><%= record.patient %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

